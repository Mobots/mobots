<?xml version="1.0" ?>
<robot name="mobot">

<!--
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://mobots_simulation/models/mobot.stl" scale=".1 .1 .1" />
      </geometry>
    </visual>
  </link>
-->

  <link name="camera">
    <inertial>
      <mass value="0.01" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001"  ixy="0.0"  ixz="0.0"
               iyy="0.001"  iyz="0.0"
               izz="0.001" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

<!--
  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera"/>
  </joint>
-->

  <gazebo reference="camera">
    <sensor:camera name="camera_sensor">
      <imageSize>640 480</imageSize>
      <imageFormat>R8G8B8</imageFormat>
      <hfov>90</hfov>
      <nearClip>0.01</nearClip>
      <farClip>100</farClip>
      <updateRate>20.0</updateRate>
      <controller:gazebo_ros_camera name="camera_controller" plugin="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>20.0</updateRate>
        <imageTopicName>my_cam/image</imageTopicName>
        <frameName>deine mudda</frameName>
        <interface:camera name="camera_iface" />
      </controller:gazebo_ros_camera>
    </sensor:camera>
    <turnGravityOff>true</turnGravityOff>
    <material>PR2/Blue</material>
  </gazebo>

</robot>
